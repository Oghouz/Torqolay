{
  "manifest_version": 2,
  "name": "Torqolay",
  "description": "This extension allows the user change website font-style, font color, background color etc",
  "version": "1.0.1",
  "author": "Merdan Memet",
  "icons": { "128": "icon.png" },

  "browser_action": {
    "default_title": "تورقولاي",
    "default_icon": "icon.png",
    "default_popup": "popup.html"
  },
  "options_page": "options.html",

  "permissions": [
    "tabs",
    "activeTab",
    "storage",
    "http://*/",
    "https://*/"
  ],

  "web_accessible_resources": [
    "fonts/*.ttf",
    "js/*.js",
    "style/*.css"
  ]

}